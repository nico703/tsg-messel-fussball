---
import BaseLayout from "../layouts/BaseLayout.astro";

const valueSlides = [
  {
    title: "Teamgeist",
    text: "Gemeinsam stark – auf und neben dem Platz.",
    image: "/images/teamgeist.jpg",
  },
  {
    title: "Respekt",
    text: "Fairness, Rücksicht und ein gutes Miteinander sind Pflicht.",
    image: "/images/respekt.jpg",
  },
  {
    title: "Freude",
    text: "Fußball soll Spaß machen – im Training, am Spieltag, in der Gemeinschaft.",
    image: "/images/freude.jpg",
  },
];
---

<BaseLayout title="TSG Messel – Fußball">
  <!-- HERO -->
  <section class="relative h-[70vh] w-full overflow-hidden md:h-[80vh]">
    <img
      src="/images/hero-jugend-home.jpg"
      alt="TSG Messel Fußball – Gemeinschaft und Begeisterung"
      class="absolute inset-0 h-full w-full object-cover"
      fetchpriority="high"
      decoding="async"
      width="1920"
      height="1080"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-slate-950/65 via-slate-950/75 to-slate-950/90"></div>

    <div class="relative z-10 mx-auto flex h-full max-w-6xl flex-col justify-end px-4 pb-16">
      <h1 class="text-4xl font-extrabold leading-tight text-white text-balance md:text-6xl">
        Eine Gemeinschaft,
        <span class="block text-[#93b0ff]">die begeistert.</span>
      </h1>
      <p class="mt-4 max-w-xl text-base text-slate-200 text-balance md:text-lg">
        Fußball bei der TSG Messel – von den Kleinsten bis zu den Aktiven.
        Ein Verein, der von Gemeinschaft, Begeisterung und Stolz lebt.
      </p>

      <div class="mt-8 flex flex-wrap gap-4">
        <a
          href="/jugend"
          class="inline-flex items-center justify-center rounded-full bg-[#1e3a8a] px-6 py-2.5 text-sm font-semibold text-white shadow-md shadow-[#1e3a8a]/30 transition hover:-translate-y-[1px] hover:bg-[#254da8]"
        >
          Zur Jugend
        </a>
        <a
          href="/herren"
          class="inline-flex items-center justify-center rounded-full bg-[#1e3a8a] px-6 py-2.5 text-sm font-semibold text-white shadow-md shadow-[#1e3a8a]/30 transition hover:-translate-y-[1px] hover:bg-[#254da8]"
        >
          Zu den Aktiven
        </a>
      </div>
    </div>
  </section>

  <!-- WERTE -->
  <section class="mx-auto max-w-6xl px-4 py-16">
    <h2 class="text-center text-3xl font-bold text-slate-900 md:text-4xl">
      Gemeinschaft · Begeisterung · Stolz
    </h2>
    <p class="mx-auto mt-4 max-w-2xl text-center text-[color:var(--tsg-accent)]">
      Unsere Werte prägen den Verein – auf dem Platz und im Vereinsleben.
      Sie verbinden Generationen.
    </p>

    <div class="mt-12 grid gap-6 md:grid-cols-3">
      {valueSlides.map((item) => (
        <article class="relative overflow-hidden rounded-2xl border border-[color:var(--tsg-border)] bg-[color:var(--tsg-surface)] shadow-[0_16px_30px_rgba(30,64,175,0.08)]">
          <div class="absolute inset-0">
            <img src={item.image} alt={item.title} class="h-full w-full object-cover" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-b from-black/25 via-black/30 to-black/55"></div>
          </div>
          <div class="relative flex h-60 flex-col justify-end gap-3 p-5 text-white">
            <span class="inline-flex w-fit rounded-full bg-white/15 px-4 py-1 text-xs font-semibold uppercase tracking-[0.18em]">
              {item.title}
            </span>
            <p class="text-sm md:text-base">{item.text}</p>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- JUGEND -->
  <section class="border-y border-[color:var(--tsg-border)] bg-gradient-to-b from-[color:var(--tsg-surface)] via-[color:var(--tsg-surface)] to-[color:var(--tsg-surface-muted)] py-16">
    <div class="mx-auto grid max-w-6xl gap-10 px-4 md:grid-cols-2 md:items-center">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.25em] text-[color:var(--tsg-accent)]">
          Jugend
        </p>
        <h2 class="mt-3 text-3xl font-bold text-slate-900 md:text-4xl">
          Hier beginnt der Weg.
        </h2>
        <p class="mt-4 text-sm text-[color:var(--tsg-accent)] md:text-base">
          Die Jugendabteilung ist das Fundament der TSG Messel.
          Hier lernen Kinder Fußball – und Werte wie Respekt, Verantwortung und Teamgeist.
        </p>

        <a
          href="/jugend"
          class="mt-6 inline-block rounded-full bg-[#1e3a8a] px-6 py-2.5 text-sm font-semibold text-white shadow-md shadow-[#1e3a8a]/30 transition hover:-translate-y-[1px] hover:bg-[#254da8]"
        >
          Schnuppertraining & Infos
        </a>
      </div>

      <div class="relative overflow-hidden rounded-2xl border border-[color:var(--tsg-border)]">
        <img
          src="/images/hero-jugend-home.jpg"
          alt="Jugendtraining TSG Messel"
          class="h-64 w-full object-cover md:h-80"
          loading="lazy"
          decoding="async"
          width="1200"
          height="600"
        />
        <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-slate-950/60 via-transparent to-transparent"></div>
      </div>
    </div>
  </section>

  <!-- AKTIVE -->
  <section class="mx-auto max-w-6xl px-4 py-16">
    <div class="grid gap-10 md:grid-cols-2 md:items-center">
      <div class="relative overflow-hidden rounded-2xl border border-[color:var(--tsg-border)] md:order-2">
        <img
          src="/images/hero-aktive-home.jpg"
          alt="Aktive Mannschaft – TSG Messel"
          class="h-64 w-full object-cover md:h-80"
          loading="lazy"
          decoding="async"
          width="1200"
          height="600"
        />
        <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-slate-950/60 via-transparent to-transparent"></div>
      </div>

      <div class="md:order-1">
        <p class="text-xs font-semibold uppercase tracking-[0.25em] text-[color:var(--tsg-accent)]">
          Aktive Mannschaften
        </p>
        <h2 class="mt-3 text-3xl font-bold text-slate-900 md:text-4xl">
          Unsere Aktiven sind Vorbilder.
        </h2>
        <p class="mt-4 text-sm text-[color:var(--tsg-accent)] md:text-base">
          Die 1. und 2. Mannschaft stehen für Einsatz, Zusammenhalt und den
          sportlichen Weg, den viele unserer Jugendspieler gehen können.
        </p>

        <a
          href="/herren"
          class="mt-6 inline-block rounded-full bg-[#1e3a8a] px-6 py-2.5 text-sm font-semibold text-white shadow-md shadow-[#1e3a8a]/30 transition hover:-translate-y-[1px] hover:bg-[#254da8]"
        >
          Zu den Herrenmannschaften
        </a>
      </div>
    </div>
  </section>

  <!-- NEWS / AKTUELLES -->
  <section class="border-t border-[color:var(--tsg-border)] bg-gradient-to-b from-[color:var(--tsg-surface)] via-[color:var(--tsg-surface)] to-[color:var(--tsg-surface-muted)] py-16">
    <div class="mx-auto max-w-6xl px-4">
      <div class="flex flex-col justify-between gap-4 md:flex-row md:items-end">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.25em] text-[color:var(--tsg-accent)]">
            Aktuelles
          </p>
          <h2 class="mt-2 text-3xl font-bold text-slate-900 md:text-4xl">
            Das passiert bei uns.
          </h2>
        </div>

        <a href="/news" class="text-sm font-semibold text-[color:var(--tsg-primary)] hover:text-[#254da8]">
          Alle Beiträge ansehen →
        </a>
      </div>

      <div class="mt-10 grid gap-6 md:grid-cols-3">
        <!-- News Card 1 -->
        <article class="overflow-hidden rounded-2xl border border-[color:var(--tsg-border)] bg-[color:var(--tsg-surface)] shadow-[0_16px_30px_rgba(30,64,175,0.08)]">
          <div class="p-4">
            <h3 class="text-sm font-semibold text-slate-900">
              Jugendturnier in Messel
            </h3>
            <p class="mt-2 text-sm text-slate-700">
              Spannende Spiele, faire Duelle und viel Applaus – unsere Jugendteams haben alles gegeben.
            </p>
          </div>
        </article>

        <!-- News Card 2 -->
        <article class="overflow-hidden rounded-2xl border border-[color:var(--tsg-border)] bg-[color:var(--tsg-surface)] shadow-[0_16px_30px_rgba(30,64,175,0.08)]">
          <div class="p-4">
            <h3 class="text-sm font-semibold text-slate-900">
              Heimsieg der 1. Mannschaft
            </h3>
            <p class="mt-2 text-sm text-slate-700">
              Starker Einsatz und tolle Stimmung am Platz – drei wichtige Punkte bleiben in Messel.
            </p>
          </div>
        </article>

        <!-- News Card 3 -->
        <article class="overflow-hidden rounded-2xl border border-[color:var(--tsg-border)] bg-[color:var(--tsg-surface)] shadow-[0_16px_30px_rgba(30,64,175,0.08)]">
          <div class="p-4">
            <h3 class="text-sm font-semibold text-slate-900">
              Sommerfest der Fußballabteilung
            </h3>
            <p class="mt-2 text-sm text-slate-700">
              Ein Fest für die ganze TSG-Familie – mit Musik, Grill und vielen lachenden Gesichtern.
            </p>
          </div>
        </article>
      </div>
    </div>
  </section>
</BaseLayout>
