---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = "TSG Messel – Fußball",
	description = "Offizielle Website der Fußballabteilung der TSG Messel.",
} = Astro.props as Props;

const navItems = [
	{ href: "/", label: "Start" },
	{ href: "/ueber-uns", label: "Über uns" },
	{ href: "/herren", label: "Herren" },
	{ href: "/jugend", label: "Jugend" },
	{ href: "/ah", label: "AH" },
	{ href: "/news", label: "News" },
];

const currentPath = Astro.url.pathname.replace(/\/+$/, "") || "/";
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div class="layout">
			<header class="site-header">
				<div class="site-header__inner">
					<a class="brand" href="/">
						<div class="brand__logo">
							<img src="/images/tsg-logo.png" alt="TSG Messel" />
						</div>
						<div class="brand__text">
							<span class="brand__title">TSG Messel</span>
							<span class="brand__subtitle">Fußball</span>
						</div>
					</a>
					<nav class="site-nav" aria-label="Hauptnavigation">
						<ul>
							{navItems.map((item) => {
								const active =
									item.href === "/"
										? currentPath === "/"
										: currentPath.startsWith(item.href);
								return (
									<li>
										<a href={item.href} class:list={{ active }}>
											{item.label}
										</a>
									</li>
								);
							})}
						</ul>
						<a
							class="site-nav__shop"
							href="https://team.jako.com/de-de/team/tsg_messel/?page=1&sort_by="
							target="_blank"
							rel="noopener noreferrer"
						>
							Online-Shop
						</a>
						<a
							class="site-nav__cta"
							href="/kontakt"
						>
							Interesse?
						</a>
					</nav>
				</div>
			</header>

			<main id="main-content" class="site-main">
				<slot />
			</main>

			<footer class="site-footer">
				<div class="site-footer__logos">
					<img src="/images/sponsor1.png" alt="Sponsor 1" loading="lazy" />
					<img src="/images/sponsor2.png" alt="Sponsor 2" loading="lazy" />
				</div>
				<div class="site-footer__links">
					<a href="/impressum">Impressum</a>
					<a href="/datenschutz">Datenschutz</a>
				</div>
			</footer>
		</div>
	</body>
</html>

<style>
:global(:root) {
	font-family: "Outfit", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
	color: #0f172a;
	background-color: #e6f0ff;
	--surface: rgba(255, 255, 255, 0.95);
	--surface-strong: #ffffff;
	--accent: #1d4ed8;
	--accent-soft: linear-gradient(135deg, rgba(37, 99, 235, 0.18), rgba(13, 148, 136, 0.12));
	--bg-gradient: linear-gradient(180deg, #e7f0ff 0%, #f6fbff 45%, #e3f0ff 100%);
}

:global(body) {
	margin: 0;
	min-height: 100vh;
	background: var(--bg-gradient);
	color: inherit;
}

.layout {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
}

.site-header {
	position: sticky;
	top: 0;
	backdrop-filter: blur(16px);
	background: rgba(230, 241, 255, 0.92);
	border-bottom: 1px solid rgba(15, 23, 42, 0.06);
	z-index: 10;
}

.site-header__inner {
	max-width: 1200px;
	margin: 0 auto;
	padding: 1rem 1.5rem;
	display: flex;
	align-items: center;
	justify-content: space-between;
	gap: 1rem;
}

.brand {
	text-decoration: none;
	display: flex;
	align-items: center;
	gap: 0.75rem;
	color: inherit;
}

.brand__logo {
	width: 48px;
	height: 48px;
	border-radius: 50%;
	background: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 8px 20px rgba(15, 23, 42, 0.15);
	padding: 0.3rem;
}

.brand__logo img {
	width: 100%;
	height: 100%;
	object-fit: contain;
}

.brand__text {
	display: flex;
	flex-direction: column;
	font-weight: 700;
	letter-spacing: 0.05em;
	text-transform: uppercase;
}

.brand__title {
	font-size: 0.85rem;
	opacity: 0.75;
}

.brand__subtitle {
	font-size: 1.1rem;
}

.site-nav {
	display: flex;
	align-items: center;
	gap: 1rem;
}

.site-nav ul {
	display: flex;
	gap: 0.8rem;
	list-style: none;
	margin: 0;
	padding: 0;
}

.site-nav a {
	text-decoration: none;
	font-weight: 500;
	padding: 0.35rem 0.75rem;
	border-radius: 999px;
	color: inherit;
	transition: background 0.2s ease, color 0.2s ease;
}

.site-nav a.active {
	background: rgba(37, 99, 235, 0.12);
	color: #1d4ed8;
}

.site-nav__cta {
	text-decoration: none;
	font-weight: 600;
	padding: 0.45rem 1.2rem;
	border-radius: 999px;
	border: 1px solid rgba(29, 78, 216, 0.35);
	background: linear-gradient(135deg, rgba(37, 99, 235, 0.9), rgba(14, 165, 233, 0.85));
	color: #fff;
	transition: opacity 0.2s ease;
}

.site-nav__cta:hover {
	opacity: 0.85;
}

.site-nav__shop {
	text-decoration: none;
	font-weight: 600;
	padding: 0.45rem 1rem;
	border-radius: 999px;
	border: 1px solid rgba(37, 99, 235, 0.25);
	color: #1e3a8a;
	background: linear-gradient(135deg, rgba(226, 239, 255, 0.9), rgba(219, 244, 255, 0.9));
}

.site-main {
	flex: 1;
}

.site-footer {
	margin-top: auto;
	padding: 2rem 1.5rem 2.5rem;
	display: flex;
	flex-direction: column;
	gap: 1rem;
	align-items: center;
	border-top: 1px solid rgba(15, 23, 42, 0.07);
	background: rgba(227, 241, 255, 0.7);
}

.site-footer__logos {
	display: flex;
	gap: 1.5rem;
	flex-wrap: wrap;
	justify-content: center;
}

.site-footer__logos img {
	max-height: 48px;
	object-fit: contain;
	filter: grayscale(0.1);
}

.site-footer__links {
	display: flex;
	gap: 1.25rem;
	font-size: 0.9rem;
}

.site-footer__links a {
	color: inherit;
	text-decoration: none;
}

@media (max-width: 820px) {
	.site-header__inner {
		flex-wrap: wrap;
	}

	.site-nav {
		width: 100%;
		justify-content: space-between;
		flex-wrap: wrap;
	}

	.site-nav ul {
		flex-wrap: wrap;
	}
}
</style>
