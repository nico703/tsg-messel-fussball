---
import type { Spieler } from "../data/herren";
const { spieler, imageBase } = Astro.props as { spieler: Spieler; imageBase?: string };

const slug = spieler.name.toLowerCase().replace(/[^a-z0-9]+/g, "-").replace(/^-+|-+$/g, "");
const basePath = imageBase ?? "/images/players";
const imageSrc = spieler.image ?? `${basePath}/${slug}.jpg`;
---

<div class="player-card">
  <div class="player-card__photo">
    <img src={imageSrc} alt={spieler.name} loading="lazy" />
    <div class="player-card__name">{spieler.name}</div>
  </div>
</div>

<style>
.player-card {
  width: 150px;
  border-radius: 16px;
  padding: 8px;
  background: #fff;
  box-shadow: 0 8px 18px rgba(30,64,175,0.2);
  display: inline-flex;
  justify-content: center;
  align-items: stretch;
}

.player-card__photo {
  position: relative;
  width: 100%;
  padding-top: 120%;
  border-radius: 12px;
  overflow: hidden;
  background: linear-gradient(135deg, rgba(59,130,246,0.18), rgba(255,255,255,0.95));
}

.player-card__photo img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.player-card__name {
  position: absolute;
  inset: auto 0 0 0;
  padding: 0.4rem 0.5rem;
  font-weight: 700;
  font-size: 0.85rem;
  line-height: 1.1;
  text-align: center;
  color: #0f172a;
  background: linear-gradient(180deg, transparent 0%, rgba(255,255,255,0.9) 60%);
}
</style>
