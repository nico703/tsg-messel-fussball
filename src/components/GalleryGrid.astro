---
import type { JugendGalleryItem } from "../data/jugendGallery";
const { items, title = "Einblicke", description } = Astro.props as {
	items: JugendGalleryItem[];
	title?: string;
	description?: string;
};
---

<section class="gallery">
	<div class="gallery__intro">
		<h2>{title}</h2>
		{description && <p>{description}</p>}
	</div>
	<div class="gallery__grid">
		{items.map((item) => (
			<article class="gallery-card">
				<div class="gallery-card__media">
					<img src={item.image} alt={item.title} loading="lazy" />
					{item.tag && <span class="gallery-card__tag">{item.tag}</span>}
				</div>
				<div class="gallery-card__body">
					{item.date && <p class="gallery-card__date">{item.date}</p>}
					<h3>{item.title}</h3>
					<p>{item.description}</p>
				</div>
			</article>
		))}
	</div>
</section>

<style>
.gallery {
	display: flex;
	flex-direction: column;
	gap: 1.5rem;
}

.gallery__grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	gap: 1.2rem;
}

.gallery-card {
	border-radius: 20px;
	overflow: hidden;
	background: #fff;
	box-shadow: 0 20px 34px rgba(15, 23, 42, 0.08);
	display: flex;
	flex-direction: column;
}

.gallery-card__media {
	position: relative;
	aspect-ratio: 4 / 3;
}

.gallery-card__media img {
	width: 100%;
	height: 100%;
	object-fit: cover;
	display: block;
}

.gallery-card__tag {
	position: absolute;
	bottom: 0.75rem;
	left: 0.75rem;
	padding: 0.3rem 0.9rem;
	background: rgba(0, 0, 0, 0.65);
	color: #fff;
	border-radius: 999px;
	font-size: 0.75rem;
	letter-spacing: 0.08em;
	text-transform: uppercase;
}

.gallery-card__body {
	padding: 1rem 1.1rem 1.3rem;
	display: flex;
	flex-direction: column;
	gap: 0.3rem;
}

.gallery-card__date {
	font-size: 0.85rem;
	color: rgba(15, 23, 42, 0.65);
	margin: 0;
}

.gallery__intro h2 {
	margin-bottom: 0.3rem;
}
</style>
